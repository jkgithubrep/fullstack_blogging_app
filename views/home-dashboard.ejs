<%- include('partials/header') %>

  <div class="container py-md-5 container--narrow">

    <%- include("partials/flash-messages.ejs") %>

      <% if (feed.length) { %>
        <h2 class="mb-3 text-center">The Latest From Those You Follow</h2>
        <div class="list-group">
        <% feed.forEach(function(post) { %>
          <a href="/post/<%= post._id %>" class="list-group-item list-group-item-action">
            <img class="avatar-tiny" src="<%= post.author.gravatar %>">
            <strong><%= post.title %></strong> by <%= post.author.username %> on <%= post.createdDate.getDate() %>/<%= post.createdDate.getMonth() + 1 %>/<%= post.createdDate.getFullYear() %>
          </a>
        <% }) %>

        </div>

      <% } else { %>

        <div class="text-center">
          <h2>Hello <strong><%= user.username %></strong>, your feed is empty.</h2>
          <p class="lead text-muted">Your feed displays the latest posts from the people you follow. If you don&rsquo;t have any friends to follow that&rsquo;s okay; you can use the &ldquo;Search&rdquo; feature in the top menu bar to find content written by people with similar interests and then follow them.</p>
        </div>

      <% } %>

  </div>

<%- include('partials/footer') %>
