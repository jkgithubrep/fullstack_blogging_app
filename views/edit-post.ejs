<%- include('partials/header') %>

  <div class="container py-md-5 container--narrow">

    <%- include("partials/flash-messages") %>

    <a href="/post/<%= post._id %>" class="d-block mb-2 font-weight-bold">&laquo; Back to view</a>

    <form action="/post/<%= post._id %>/edit" method="POST">
      <div class="form-group">
        <label for="post-title" class="text-muted mb-1"><small>Title</small></label>
        <input required name="title" id="post-title" value="<%= post.title %>" class="form-control form-control-lg form-control-title" type="text" placeholder="" autocomplete="off">
      </div>

      <div class="form-group">
        <label for="post-body" class="text-muted mb-1"><small>Body Content</small></label>
        <textarea required name="body" id="post-body" class="body-content tall-textarea form-control" type="text"><%= post.body %></textarea>
      </div>

      <input type="hidden" name="_csrf" value=<%= csrfToken %>>
      <button class="btn btn-primary mt-2">Update Post</button>
    </form>
  </div>

<%- include('partials/footer') %>
